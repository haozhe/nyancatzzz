<?xml version="1.0"?>
<api>
	<description>
		<![CDATA[This is an API to interact with db]]>
	</description>

	<command id='client' security='public'>
		<post>
			<description><![CDATA[Check if user is already in database, if not add the user]]></description>
			<action file='users.php'><![CDATA[createUser($_POST['uid']);]]></action>
			<param id='uid'>
				<exampleValue></exampleValue>
			</param>
		</post>
		<get>
			<description><![CDATA[Return user's name, picture, number of friends, number of reviews, review list, etc]]></description>
			<action file='users.php'><![CDATA[getUserInfo($_REST['client']);]]></action>
		</get>
		<command id='friends' security='public'>
            <index>
                <description><![CDATA[Return friend list]]></description>
                <action file='users.php'><![CDATA[listFriends($_REST['client']);]]></action>
            </index>
            <post>
                <description><![CDATA[Add `friend` as `client`'s friend, but NOT vice versa]]></description>
                <action file='users.php'><![CDATA[addFriend($_REST['client'], $_POST['friend']);]]></action>
                <param id='friend'>
                    <exampleValue></exampleValue>
                </param>
            </post>
        </command>
		<command id='bookmarks' security='public'>
            <index>
                <description><![CDATA[Return user's bookmark list]]></description>
                <action file='meals.php'><![CDATA[listBookmarks($_REST['client']);]]></action>
            </index>
        </command>
	</command>
	
	<command id='comment' security='public'>
		<get>
			<description><![CDATA[Return a specific comment by given `comment` id]]></description>			
			<action file='comments.php'><![CDATA[getComment($_REST['comment']);]]></action>
		</get>
		<post>
			<description><![CDATA[Post a new comment on food `mid` by user `uid` with content `commentText` and rating `rating`]]></description>
			<action file='comments.php'><![CDATA[addComment($_POST['rating'], $_POST['commentText'], $_POST['mid'], $_POST['uid']);]]></action>
			<param id='rating'>
				<description><![CDATA[Rating of the food]]></description>
				<exampleValue><![CDATA[star1 or star2 or star3 or star4 or star5]]></exampleValue>
			</param>
			<param id='commentText'>
				<description><![CDATA[Comment Text]]></description>
			</param>
            <param id='mid'>
				<description><![CDATA[Food ID]]></description>
			</param>
            <param id='uid'>
				<description><![CDATA[User ID]]></description>
			</param>
		</post>
		
        <command id='helpful' security='public'>
            <index>
                <description><![CDATA[Vote helpful for a comment]]></description>
                <action file='comments.php'><![CDATA[isHelpful($_REST['comment']);]]></action>
            </index>
        </command>
		<put>
			<description><![CDATA[Update a comment - (NOT IN USE)]]></description>
			<action file='comments.php'><![CDATA[updateComment($_REST['comment'],$_POST['commentText']);]]></action>
			<param id='commentText'>
				<description><![CDATA[Comment Text To Update]]></description>
				<defaultValue><![CDATA[some default comment text update]]></defaultValue>
				<exampleValue><![CDATA[some example commment text update]]></exampleValue>
			</param>
		</put>
		<delete>
			<description><![CDATA[This is how you can delete a comment - (NOT IN USE)]]></description>
			<action file='comments.php'><![CDATA[deleteComment($_REST['comment']);]]></action>
		</delete>
	</command>
    
    <command id='meal' security='public'>
		<command id='comment' security='public'>
            <index>
                <description><![CDATA[List all comments of food `meal`]]></description>
                <action file='comments.php'><![CDATA[listComments($_REST['meal']);]]></action>
            </index>
        </command>
		<index>
			<description><![CDATA[List basic information of all meals]]></description>
			<action file='meals.php'><![CDATA[listMeals();]]></action>
		</index>
		<get>
			<description><![CDATA[Get all detail information of a specific meal]]></description>
			<action file='meals.php'><![CDATA[getMeal($_REST['meal']);]]></action>
		</get>
	</command>
	
	<command id='bookmark' security='public'>
		<get>
			<description><![CDATA[Get whether the user `uid` has put a bookmark on food `mid`]]></description>
			<action file='meals.php'><![CDATA[getBookmark($_REST['bookmark'], $_GET['mid'], $_GET['uid']);]]></action>
			<param id='mid'>
				<exampleValue></exampleValue>
			</param>
			<param id='uid'>
				<exampleValue></exampleValue>
			</param>
		</get>
		<post>
			<description><![CDATA[Either add bookmark or remove bookmark on food `mid` ]]></description>
			<action file='meals.php'><![CDATA[editBookmark($_POST['option'], $_POST['mid'], $_POST['uid']);]]></action>
			<param id='option'>
				<exampleValue><![CDATA[add or remove]]></exampleValue>
			</param>
			<param id='mid'>
				<exampleValue></exampleValue>
			</param>
			<param id='uid'>
				<exampleValue></exampleValue>
			</param>
		</post>
	</command>
    
    <command id='rating' security='public'>
        <post>
            <description><![CDATA[TODO: Right now user can rate same meal for multiple times - (NOT IN USE)]]></description>
            <action file='meals.php'><![CDATA[addRating($_REST['rating'], $_POST['star']);]]></action>
            <param id='star'>
                <description><![CDATA[Rating]]></description>
                <exampleValue><![CDATA[1, 2, 3, 4, 5]]></exampleValue>
            </param>
        </post>
    </command>
    
    <command id='dininghall' security='public'>
        <index>
            <description><![CDATA[This is how you can get a listing of all dining halls - (NOT IN USE)]]></description>
            <action file='dininghalls.php'><![CDATA[listDiningHalls();]]></action>
        </index>
        <get>
			<description><![CDATA[This is how you can get a specific dining hall]]></description>
			<action file='dininghalls.php'><![CDATA[getDiningHall($_REST['dininghall']);]]></action>
		</get>
    </command>

	<command id='hot' security='public'>
        <index>
            <description><![CDATA[List all hot foods]]></description>
            <action file='meals.php'><![CDATA[hotFoodList();]]></action>
        </index>
    </command>
</api>